<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/admin.css">
    <title>Admin Profile</title>
</head>

<body>

    <%-include('partials/navbar.html')%>
    <div class="container-fluid">
        <div class="row">
            <%-include('partials/sidebar.html')%>
            <div class="col-md-10 content">
                <div class="row">
                    <div class="col-md-6 profile-content">
                        <p class="display-4">Your Profile</p>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.name%>">
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.email%>">
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Phone</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.phone%>">
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Address</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.address%>">
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Gender</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.gender%>">
                            </div>
                        </div>
                        <hr>

                        <div class="mt-3">
                            <a href="/admin/profile/edit" class="btn btn-primary">Edit Profile Info</a> |
                            <a href="/admin/changepass" class="btn btn-secondary">Change Password</a>
                        </div>
                    </div>

                    <div class="col-md-5 profile-content text-center">
                        <div class="image-container mb-3">
                            <% if(res.profile_pic) { %>
                                <img class="profile-pic" src="<%=res.profile_pic%>" alt="Admin Image" style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover;">
                            <% } else { %>
                                <img class="profile-pic" src="/../../images/default-avatar.png" alt="Default Image" style="width: 200px; height: 200px; border-radius: 50%;">
                            <% } %>
                        </div>
                        <hr>

                        <form action="/admin/profile/edit" method="POST" enctype="multipart/form-data" id="instantUploadForm">
                            <input type="hidden" name="user_id" value="<%=res.user_id%>">
                            <input type="hidden" name="name" value="<%=res.name%>">
                            <input type="hidden" name="email" value="<%=res.email%>">
                            <input type="hidden" name="phone" value="<%=res.phone%>">
                            <input type="hidden" name="address" value="<%=res.address%>">
                            <input type="hidden" name="gender" value="<%=res.gender%>">

                            <label for="profile_pic_input" class="btn btn-outline-dark" style="cursor: pointer;">
                                Change Profile Picture
                            </label>
                            
                            <input type="file" name="profile_pic" id="profile_pic_input" style="display: none;" onchange="document.getElementById('instantUploadForm').submit()">
                        </form>
                        <p class="small text-muted">Upload directly to S3 bucket</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%-include('../partials/footer.html')%>