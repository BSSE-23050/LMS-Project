<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/customer.css">
    <title>Customer Profile Edit</title>
</head>

<body>

    <%-include('partials/navbar.html')%>
    <div class="container-fluid">
        <div class="row">
            <%-include('partials/sidebar.html')%>
            <div class="col-md-10 content">
                <div class="row">
                    <div class="col-md-11 profile-content">
                        <p class="display-4">Edit Profile</p>
                        
                        <form action="/customer/profile/edit" method="post" enctype="multipart/form-data">
                            
                            <input type="text" name="user_id" value="<%=res.user_id%>" hidden>
                            <input type="hidden" name="old_profile_pic" value="<%=res.profile_pic%>">

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="<%=res.name%>" name="name">
                                </div>
                            </div>
                            <hr>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Update Profile Picture</label>
                                <div class="col-sm-10">
                                    <input type="file" class="form-control-file" name="profile_pic" accept="image/*">
                                    <small class="text-muted">Upload a new photo to S3</small>
                                </div>
                            </div>
                            <hr>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="<%=res.email%>" name="email">
                                </div>
                            </div>
                            <hr>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Phone</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="<%=res.phone%>" name="phone">
                                </div>
                            </div>
                            <hr>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="<%=res.address%>" name="address">
                                </div>
                            </div>
                            <hr>

                            <span>Gender</span>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="male" value="Male" <%= res.gender == 'Male' ? 'checked' : '' %>>
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="female" value="Female" <%= res.gender == 'Female' ? 'checked' : '' %>>
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                            <hr>

                            <div>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <br>
                            </div>
                            
                            <div class="error-container" style="color: #d9534f; margin-top: 15px;">
                                <% if(errs) { %>
                                    <% for(var i=0; i< errs.length; i++){ %>
                                        <%= errs[i].message; %>
                                        <br>
                                    <% } %>
                                <% } %>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

<%-include('../partials/footer.html')%>