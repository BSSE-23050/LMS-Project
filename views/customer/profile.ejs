<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/customer.css">
    <title>Customer Profile</title>
</head>

<body>

    <%-include('partials/navbar.html')%>
    <div class="container-fluid">
        <div class="row">
            <%-include('partials/sidebar.html')%>
            <div class="col-md-10 content">
                <div class="row">
                    <div class="col-md-6 profile-content">
                        <p class="display-4">Your Profile</p>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.name%>">
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.email%>">
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Phone</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.phone%>">
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Address</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.address%>">
                            </div>
                        </div>
                        <hr>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Gender</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" readonly value="<%=res.gender%>">
                            </div>
                        </div>
                        <hr>

                        <div class="mt-3">
                            <a href="/customer/profile/edit" class="btn btn-primary">Edit Profile Details</a> |
                            <a href="/customer/changepass" class="btn btn-outline-secondary">Change Password</a>
                        </div>
                    </div>

                    <div class="col-md-5 profile-content text-center">
                        <div class="image-container mb-3">
                            <% if(res.profile_pic) { %>
                                <img class="profile-pic" src="<%=res.profile_pic%>" alt="Customer Profile" style="width: 200px; height: 200px; object-fit: cover; border-radius: 50%;">
                            <% } else { %>
                                <img class="profile-pic" src="/../../images/default-avatar.png" alt="Default Avatar" style="width: 200px; height: 200px; border-radius: 50%;">
                            <% } %>
                        </div>
                        <hr>

                        <form action="/customer/profile/edit" method="POST" enctype="multipart/form-data" id="instantUploadForm">
                            
                            <input type="hidden" name="user_id" value="<%=res.user_id%>">
                            <input type="hidden" name="name" value="<%=res.name%>">
                            <input type="hidden" name="email" value="<%=res.email%>">
                            <input type="hidden" name="phone" value="<%=res.phone%>">
                            <input type="hidden" name="address" value="<%=res.address%>">
                            <input type="hidden" name="gender" value="<%=res.gender%>">
                            <input type="hidden" name="old_profile_pic" value="<%=res.profile_pic%>">

                            <button type="button" class="btn btn-sm btn-info" id="uploadTrigger">
                                 Update Profile Photo
                            </button>

                            <input type="file" name="profile_pic" id="cust_photo_input" style="display: none;" onchange="this.form.submit()">
                        </form>
                        
                        <p class="small text-muted mt-2">Uploading to AWS S3 Bucket</p>
                        
                        <script>
        document.getElementById('uploadTrigger').addEventListener('click', function(e) {
            e.preventDefault(); // This kills the '#' behavior dead
            document.getElementById('cust_photo_input').click();
        });

        document.getElementById('cust_photo_input').addEventListener('change', function() {
            if (this.files && this.files[0]) {
                document.getElementById('instantUploadForm').submit(); // Direct cloud POST
            }
        });
    </script>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%-include('../partials/footer.html')%>